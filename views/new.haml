  %input{:type=>"text", :name=>"name", :placeholder=>"Name of source"} <br/>
  %input{:type=>"text", :name=>"website", :placeholder=>"Website address"} <br/>
  %textarea{:name=>"description", :placeholder=>"Description of the source"}
  %input{:type=>"file", :name=>"image"} <br/>
  %input{:type=>"submit", :value=>"Upload"}
